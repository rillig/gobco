package instrumenter

// https://go.dev/ref/spec#IncDec_statements

// incDecStmt covers the instrumentation of [ast.IncDecStmt], which has the
// expression field X.
//
// Increment and decrement statements are not instrumented themselves.
func incDecStmt() {

	// The expression must be addressable ...
	i := 0
	i++
	i--

	var arr [1]int
	arr[0]++
	arr[0]--

	// ... or a map index expression.
	m := map[bool]int{}
	m[!(GobcoCover(0, true == true) == true)]++
	m[!(GobcoCover(1, false == true) == true)]--
	m[GobcoCover(2, i == 11) == true]++
	m[GobcoCover(3, i == 12) == true]--
}

// :22:5: "true"
// :23:5: "false"
// :24:4: "i == 11"
// :25:4: "i == 12"
